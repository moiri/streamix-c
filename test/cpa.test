stateless box DS (up side out dist) on func_ds
stateless box B (in break_abs) on func_b
box DC (
    in abs,
    in cpa,
    side in dist,
    up down out dc
) on func_dc
box CPA (
    sync {
        decoupled in dist,
        down in dc
    },
    out cpa,
    side in car_l_in,
    side out car_l_out,
    side in car_r_in,
    side out car_r_out
) on func_cpa

net Car { up in car_in (car_l_in), up out car_out (car_l_out),
        down in car_in (car_r_in), down out car_out (car_r_out) } {
    connect dist {DC, CPA}

    box MB (in block, out break_cmd) on func_mb

    net Sensors { out speed, in block, out break_cmd, in break_abs } {
        stateless box RS (out speed) on func_rs

        RS|B|MB
    }

    net ABS { up in dc, out abs } {
        box ABS (
            in speed,
            in break_cmd,
            up in dc,
            out break_abs,
            out block,
            out abs
        ) on func_abs

        Sensors.ABS
    }

    (ABS.DC|DS).CPA
}

Car.Car.Car
